#!/bin/bash

### BEGIN INIT INFO
# Provides:          ncpa_listener
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: This manages the NCPA Listener service
# Description:       NCPA is a cross platform monitoring agent for Nagios that requires no dependencies.
### END INIT INFO

# init.d / servicectl compatibility (openSUSE)
if [ -f /etc/rc.status ]; then
    . /etc/rc.status
    rc_reset
fi

# Source function library
if [ -f /etc/rc.d/init.d/functions ]; then
    . /etc/rc.d/init.d/functions
fi

_BASEDIR_

# Grab variables to start the daemon
PIDFILE=$(grep pidfile -r $BASEDIR/etc/*.cfg | grep listener | sed '/^#/ d' | cut -d '=' -f 2 | awk '{$1=$1};1' | head -1)
PIDFILE=$BASEDIR/$PIDFILE

# Start NCPA Listener service
start() {
    action "Starting NCPA Listener: " $BASEDIR/ncpa_posix_listener --start
}

# Stop NCPA Listener service
stop() {
    action "Stopping NCPA Listener: " $BASEDIR/ncpa_posix_listener --stop
}

# Get the status of the NCPA Listener service
status() {
    status -p $PIDFILE ncpa_listener
}

# Main init script logic
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status
        ;;
    restart|reload|condrestart)
        stop
        start
        ;;
    *)
        echo $"Usage: $0 {start|stop|restart|reload|status}"
        exit 1
esac
exit 0
